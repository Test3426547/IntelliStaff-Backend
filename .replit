modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start NestJS Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Communication Service Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Analytics Service Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Resume Ingestion Test"

[[workflows.workflow]]
name = "Start NestJS Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ai-recruitment-platform && npm run start:dev"
waitForPort = 8080

[[workflows.workflow]]
name = "Communication Service Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test src/communication/communication.service.spec.ts"

[[workflows.workflow]]
name = "Analytics Service Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test src/analytics/analytics.service.spec.ts"

[[workflows.workflow]]
name = "Resume Ingestion Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test src/resume-ingestion/resume-ingestion.service.spec.ts"

[deployment]
run = ["sh", "-c", "cd ai-recruitment-platform && npm run start:dev"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 80
